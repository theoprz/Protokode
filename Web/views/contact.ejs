<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta charset="utf-8">
    <title>Contact</title>
    <meta name="description" content="test">
	<!-- Font Awesome -->
    <script src="https://kit.fontawesome.com/65f54486e0.js" crossorigin="anonymous"></script>
    <!-- Google Fonts -->
    <link rel = "preconnect" href = "https://fonts.gstatic.com">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono&display=swap" rel="stylesheet">
    <!-- CSS perso -->
    <link rel="stylesheet" href="css/style.css">
    </head>
<body>
    <%- include('templates/header.ejs'); %>

<body>
    <main>
        <h1 class="titre"> Contact Form </h1> 
        
        
        <form class="form" action="<%= action %>" method="post">
  
                <% if (fields.length) { %>
                    <% fields.forEach(function(field){ 
                        if(field.name == "message"){%>
                        <label class="form-label">Your Message</label>
                            <textarea class="form-textarea" name="<%= field.name %>" <% if (field.property) { %> <%= field.property %> <% } %> ></textarea>
                        
                        <%return;}%>
                        <label class="form-label"><%= field.name %></label>
                        <input class="form-input" type="<%= field.type %>" name="<%= field.name %>" <% if (field.property) { %> <%= field.property %> <% } %> >
                        <br>
                    <% }) %>
                <% } %>

            <button type="submit">Send</button>
        </form>
        
    </main>

<%- include('templates/footer.ejs'); %>
